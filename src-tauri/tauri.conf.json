{
  "productName": "deck",
  "version": "0.1.0",
  "identifier": "com.deck.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build:all",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Deck - Remote PC Controller",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "../commands.yaml",
      "../mobile-dist/**/*"
    ]
  },
  "plugins": {}
}

